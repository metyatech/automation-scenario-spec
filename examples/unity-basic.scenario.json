{
  "schema_version": "2.0.0",
  "scenario_id": "unity-editor-basic",
  "name": "Unity Editor Basic Flow",
  "target": "unity",
  "variables": [
    {
      "id": "unity_window_hint",
      "type": "string",
      "default": "Unity"
    }
  ],
  "execution": {
    "mode": "attach",
    "attach": {
      "window_hint_var": "unity_window_hint"
    }
  },
  "steps": [
    {
      "id": "wait-unity-window",
      "title": "Wait Unity window",
      "kind": "action",
      "action": "wait_for",
      "target": {
        "strategy": "uia",
        "uia": {
          "title": "${unity_window_hint}"
        }
      },
      "timing": {
        "timeout_seconds": 30,
        "poll_interval_seconds": 0.5
      }
    },
    {
      "id": "click-scene-tab",
      "title": "Click Scene tab",
      "kind": "action",
      "action": "click",
      "target": {
        "strategy": "coordinate",
        "coordinate": {
          "x_ratio": 0.22,
          "y_ratio": 0.06,
          "anchor_window_hint": "${unity_window_hint}"
        }
      },
      "timing": {
        "timeout_seconds": 10
      }
    }
  ]
}
