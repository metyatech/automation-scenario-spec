{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://github.com/metyatech/automation-scenario-spec/schema/scenario.schema.json",
  "title": "Automation Scenario",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "scenario_id", "name", "target", "steps"],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0.0"
    },
    "scenario_id": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[a-z0-9][a-z0-9-]*$"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "target": {
      "type": "string",
      "enum": ["unity", "web"]
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/step"
      }
    }
  },
  "$defs": {
    "step": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "title", "action", "params"],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1,
          "pattern": "^[a-z0-9][a-z0-9-]*$"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "action": {
          "type": "string",
          "enum": [
            "open_url",
            "click",
            "drag",
            "type",
            "wait",
            "shortcut",
            "menu",
            "keys",
            "screenshot"
          ]
        },
        "params": {
          "type": "object",
          "additionalProperties": true
        }
      }
    }
  }
}
